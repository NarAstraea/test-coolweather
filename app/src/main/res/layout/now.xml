<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#8000">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/temperature_num"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#fff"
            android:textSize="60sp"
            android:text="00"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/temperature_num"
            android:layout_alignBottom="@id/temperature_num"
            android:textColor="#fff"
            android:textSize="40sp"
            android:text="°C" />
        <TextView
            android:id="@+id/weather_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperature_num"
            android:layout_alignRight="@id/temperature_num"
            android:gravity="right"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="天气"/>
    </RelativeLayout>
</LinearLayout>